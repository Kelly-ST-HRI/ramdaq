/*
 * -------------------------------------------------
 *  Nextflow config file for local annotation paths
 * -------------------------------------------------
 * Defines reference genomes, using local paths
 * Files can be donwloaded from
 * https://bioinformatics.riken.jp/ramdaq_nfcore/
 */

params {
  genomes {
    'GRCm38' {
      adapter = "${params.local_annot_dir}/all_sequencing_WTA_adopters.fa"
      hisat2_idx = "${params.local_annot_dir}/hisat2_v220_index_GRCm38_primary_ERCC/*.ht2"
      chrsize = "${params.local_annot_dir}/GRCm38.primary_assembly.genome.fa.fai"
      bed = "${params.local_annot_dir}/gencode.vM25.primary_assembly.annotation.bed"
      gtf = "${params.local_annot_dir}/gencode.vM25.primary_assembly.annotation.ERCC.gtf"
      mt_gtf = "${params.local_annot_dir}/gencode.vM25.primary_assembly.annotation.mt.gtf"
      rrna_gtf = "${params.local_annot_dir}/mm10_rmsk_rRNA4.5S_Refseq_45S4.5Smerge_all.gtf"
      histone_gtf = "${params.local_annot_dir}/gencode.vM25.primary_assembly.annotation.histone.gtf"
    }
    'GRCm38_chr19' {
      adapter = "${params.local_annot_dir}/all_sequencing_WTA_adopters.fa"
      hisat2_idx = "${params.local_annot_dir}/hisat2_index_GRCm38_primary_chr19.tar.gz"
      chrsize = "${params.local_annot_dir}/GRCm38.primary_assembly.genome.chr19.fa.fai"
      bed = "${params.local_annot_dir}/gencode.vM25.primary_assembly.annotation.chr19.bed"
      gtf = "${params.local_annot_dir}/gencode.vM25.primary_assembly.annotation.chr19.gtf"
      mt_gtf = "${params.local_annot_dir}/gencode.vM25.primary_assembly.annotation.mt.gtf"
      rrna_gtf = "${params.local_annot_dir}/mm10_rmsk_rRNA4.5S_Refseq_45S4.5Smerge_all.gtf"
      histone_gtf = "${params.local_annot_dir}/gencode.vM25.primary_assembly.annotation.histone.gtf"
    }
    'GRCh38' {
      adapter = "${params.local_annot_dir}/all_sequencing_WTA_adopters.fa"
      hisat2_idx = "${params.local_annot_dir}/hisat2_v220_index_GRCh38pri_ERCC/*.ht2"
      chrsize = "${params.local_annot_dir}/GRCh38.primary_assembly.genome.fa.fai"
      bed = "${params.local_annot_dir}/gencode.v35.primary_assembly.annotation.bed"
      gtf = "${params.local_annot_dir}/gencode.v35.primary_assembly.annotation.ERCC.gtf"
      mt_gtf = "${params.local_annot_dir}/gencode.v35.primary_assembly.annotation.mt.gtf"
      rrna_gtf = "${params.local_annot_dir}/Human_GRCh38_rmk_rRNA_RefSeq_RNA45S_all.gtf"
      histone_gtf = "${params.local_annot_dir}/gencode.v35.primary_assembly.annotation.histone.gtf"
    }
  }
}
