      mt_gtf = 'https://bioinformatics.riken.jp/ramdaq/ramdaq_annotation/mouse/gencode.vM25.primary_assembly.annotation.mt.gtf'
      rrna_gtf = 'https://bioinformatics.riken.jp/ramdaq/ramdaq_annotation/mouse/Mouse_mm10_rmsk_rRNA_Refseq_45S_merge.gtf'
